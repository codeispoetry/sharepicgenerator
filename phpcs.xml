<?xml version="1.0"?>
<ruleset name="sharepicgenerator">
    <file>code/dist/</file>

    <exclude-pattern>*.css</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*nounproject*</exclude-pattern>

    <rule ref="PSR2" />

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
        </properties>
    </rule>
    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
</ruleset>
